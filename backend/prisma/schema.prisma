generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String        @id @default(uuid())
  fullname   String
  email      String        @unique
  password   String
  created_at DateTime      @default(now())
  devices    UsersDevice[]
}

model UsersDevice {
  id         String        @id @default(uuid())
  deviceId   String        @unique
  user       Users         @relation(fields: [userId], references: [id])
  userId     String
  sensor     SensorData[]
  led        LedStatus?
  setting    SensorSetting[] 
}

model SensorData {
  id          Int         @id @default(autoincrement())
  device      UsersDevice @relation(fields: [deviceId], references: [deviceId])
  deviceId    String
  temperature Float
  turbidity   Float
  tds         Float
  ph          Float
  createdAt   DateTime    @default(now()) @map("created_at")
}

model LedStatus {
  device    UsersDevice @relation(fields: [deviceId], references: [deviceId])
  deviceId  String      @id
  state     Boolean     @default(false)
  updatedAt DateTime    @updatedAt @map("updated_at")
}

model SensorSetting {
  id         Int         @id @default(autoincrement())
  device     UsersDevice @relation(fields: [deviceId], references: [deviceId])
  deviceId   String
  type       Int         // SensorType (0=temp,1=turb,2=tds,3=ph)
  minValue   Float
  maxValue   Float
  enabled    Boolean
  createdAt  DateTime    @default(now())
  @@unique([deviceId, type])
}
